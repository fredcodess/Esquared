<%- include('./shared/head', { pageTitle: 'CONTACT'}) %>
  </head>
  <body>
    <%- include('./shared/header') %>
    <main >
      <div class="auth-main bg-gray-100 flex justify-around p-8 rounded-lg">
        <section class="login-form flex flex-col p-8 w-full md:w-1/2">
          <form action="/contact" method="POST" class="flex flex-col space-y-6">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <h2 class="text-center text-2xl mb-8">Contact</h2>
            
            <label for="name" class="text-sm mb-2">Full Name</label>
            <input
              type="text"
              name="fullname"
              required
              class="w-full p-2 border border-gray-300 rounded-lg text-sm focus:border-gray-700 focus:ring-1 focus:ring-blue-200"
            />
            
            <label for="email" class="text-sm mb-2">Email</label>
            <input
              type="email"
              name="email"
              required
              class="w-full p-2 border border-gray-300 rounded-lg text-sm focus:border-gray-700 focus:ring-1 focus:ring-blue-200"
            />
            
            <label for="subject" class="text-sm mb-2">Subject</label>
            <input
              type="subject"
              name="subject"
              required
              class="w-full p-2 border border-gray-300 rounded-lg text-sm focus:border-gray-700 focus:ring-1 focus:ring-blue-200"
            />
            
            <label for="message" class="text-sm mb-2">Message</label>
            <textarea
              name="message"
              id="message"
              required
              class="w-full p-2 border border-gray-300 rounded-lg text-sm focus:border-gray-700 focus:ring-1 focus:ring-blue-200"
            ></textarea>
            
            <input type="hidden" name="response">
            <button
              type="submit"
              class="w-full p-2 bg-black text-white rounded-lg text-sm hover:bg-gray-700"
            >
              Submit
            </button>
          </form>
        </section>
        
        <!-- Video Section (Hidden on mobile) -->
        <section class="login-img flex items-center hidden md:block">
          <video src="/media/contact-video.mp4" autoplay muted loop class="w-[500px] h-[600px] rounded-lg"></video>
        </section>
      </div>
      
        <%- include('./shared/bookings') %>
      </main>
    <%- include('./shared/footer') %>