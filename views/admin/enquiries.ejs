<%- include('../customer/shared/head', { pageTitle: 'Manage Booking'}) %>
     <link rel="stylesheet" href="/styles/auth.css" />
     <link rel="stylesheet" href="/styles/enquiries.css" />
</head>
<body>
    <%- include('../customer/shared/header') %>
    <main>
        <div class="admin-panel">
            <h1>Admin Response Panel</h1>
            <div class="panel-container">
              <!-- Customer Inquiries List -->
              <div class="inquiry-list">
                <h2>Customer Inquiries</h2>
                <p class="subtext">Select an inquiry to respond</p>
                <ul>
                <% for (const contact of contacts) { %>
                  <li class="inquiry-item">
                    <%- include('./shared/all-enquiries', { contact: contact}) %>
                  </li>
                <% } %>
                </ul>
              </div>
      
              <!-- Selected Inquiry Details -->
              <div class="inquiry-details">
                <h2>Selected Inquiry</h2>
                <p class="subtext">Respond to the customer's message</p>
                <div class="inquiry-content">
                  <h3>Return Policy</h3>
                  <p><strong>From:</strong> <%= contact.fullname %> (<%= contact.email %>)</p>
                  <div class="customer-question">
                    <%= contact.message %>
                  </div>
                  <form action="/respond" method="POST">
                  <textarea name="response" placeholder="Type your response here..."></textarea>
                  <input type="hidden" name="contactId" value="<%= contact._id %>">
                  <button class="send-btn">Send Response</button>
                </form>
                </div>
              </div>
            </div>
          </div>
    </main>
    <%- include('../customer/shared/footer') %>