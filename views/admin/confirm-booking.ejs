<%- include('../customer/shared/head', { pageTitle: 'Confirm Booking'}) %>
     <link rel="stylesheet" href="/styles/auth.css" />
     <link rel="stylesheet" href="/styles/enquiries.css" />
</head>
<body>
    <%- include('../customer/shared/header') %>
    <main class="container">
        <div class="inquiry-details">
            <h2>Selected Booking</h2>
            <div class="inquiry-content">
              <h3><%= booking.subject %></h3>
              <p><strong>From:</strong> <%= booking.fullname %> (<%= booking.email %>)</p>
              <div class="customer-question"><strong>Date</strong>
                <p><%= booking.event_date %></p>
                <strong>Time</strong>
                <p><%= booking.appointment_time %></p>
                <strong>Services</strong>
                <p><%= booking.service_type %></p>
                <strong>Location</strong>
                <p><%= booking.event_location %></p>
                <strong>Details</strong>
                <p><%= booking.additional_info %></p></div>
              <form action="/confirm-booking/<%= booking.id %>" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <select name="status" id="status">
                    <option value="pending" selected>pending</option>
                    <option value="approved">Approved</option>
                    <option value="cancelled">Cancel</option>
                  </select>
                <button class="send-btn">Send Response</button>
              </form>              
            </div>
          </div>
          
    </main>
    <%- include('../customer/shared/footer') %>